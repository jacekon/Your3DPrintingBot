# Telegram (required)
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather

# Printer (optional if using discovery)
PRINTER_IP=192.168.31.104

# Slicer binary path
SLICER_PATH=/Applications/OrcaSlicer.app/Contents/MacOS/OrcaSlicer

# LLM (required for intent parsing and conversational replies)
# Default: Ollama (localhost)

# Ollama (default, localhost)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Or OpenAI (uncomment to use instead)
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-4o-mini

# Restrict who can use the bot (optional, comma-separated Telegram user IDs)
# ALLOWED_TELEGRAM_IDS=123456789
